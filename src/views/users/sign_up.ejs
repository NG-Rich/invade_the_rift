<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../static/partials/head'); %>
  </head>
  <body id="backgroundImg">
    <%- include('../static/partials/banner'); %>
    <%- include('../static/partials/navbar'); %>
    <%- include('../static/partials/messages'); %>

      <main class="d-flex justify-content-center" style="padding: 2rem;">
        <div class="jumbotron text-center" id="userContainer">
          <form class="form" action="/users" method="post">
            <div class="form-group">
              <label for="username">Username:</label>
              <input type="text" class="form-control" name="username" aria-describedby="usernameHelp" placeholder="Enter username">
              <small class="text-muted" id="usernameHelp">username must be 4 characters minimum</small>
            </div>
            <div class="form-group">
              <label for="email">Email:</label>
              <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
              <small class="text-muted" id="emailHelp">email address must be valid</small>
            </div>
            <div class="form-group">
              <label for="password">Password:</label>
              <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" placeholder="Enter password">
              <small class="text-muted" id="passwordHelp">password must be 6 characters minimum</small>
            </div>
            <div class="form-group">
              <label for="passwordConfirmation">Confirm Password:</label>
              <input type="password" class="form-control" name="passwordConfirmation" aria-describedby="passwordHelp" placeholder="Confirm password">
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>
          </form>
        </div>
      </main>

    <%- include('../static/partials/baseScripts'); %>
  </body>
</html>
