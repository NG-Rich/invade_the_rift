<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../static/partials/head'); %>
  </head>
  <body id="backgroundImg">
    <%- include('../static/partials/banner'); %>
    <%- include('../static/partials/navbar'); %>
    <%- include('../static/partials/messages'); %>

    <main class="container">
      <h2 class="text-center" id="headerFonts"><%= user.username %>'s Profile</h2>

      <div class="card">
        <div class="row text-center">
          <div class="col-sm">
            <h3 class="card-header">Recent Discussions</h3>
          <% if(discussions) { %>
            <% discussions.forEach((discussion) => { %>
            <li class="list-group-item list-group-item-action">
              <a class="list-group-item-action" href="/forums/discussion/<%= discussion.id %>">
                <%= discussion.title %>
              </a>
            </li>
            <% }) %>
          <% } %>
          </div>
          <div class="col-sm">
            <h3 class="card-header">Recent Posts</h3>
          <% if(posts) { %>
            <% posts.forEach((post) => { %>
            <li class="list-group-item list-group-item-action">
              <a class="list-group-item-action" href="/forums/discussion/<%= post.discussionId %>/post/<%= post.id %>">
                <%= post.title %>
              </a>
            </li>
            <% }) %>
          <% } %>
          </div>
        </div>
      </div>

    </main>

    <%- include('../static/partials/baseScripts'); %>
  </body>
</html>
