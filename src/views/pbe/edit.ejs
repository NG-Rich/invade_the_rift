<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../static/partials/head'); %>
  </head>
  <body id="backgroundImg">
    <%- include('../static/partials/banner'); %>
    <%- include('../static/partials/navbar'); %>
    <%- include('../static/partials/messages'); %>

    <div class="container">
      <h2 class="text-center" id="headerFonts">Edit PBE Post</h2>

      <div id="formContainer">
        <form action="/pbe/<%= pbePost.title %>/update" method="post">
          <div class="form-group">
            <input class="form-control" type="text" name="title" placeholder="Enter title" value="<%= pbePost.title %>">
            <textarea class="form-control" name="body" rows="20" cols="80" placeholder="Enter text"><%- pbePost.body %></textarea>
          </div>
          <button class="btn btn-primary" type="submit" name="button">Update</button>
        </form>
      </div>
    </div>

    <%- include('../static/partials/baseScripts'); %>
  </body>
</html>
