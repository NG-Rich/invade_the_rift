<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../static/partials/head'); %>
  </head>
  <body id="backgroundImg">
    <%- include('../static/partials/banner'); %>
    <%- include('../static/partials/navbar'); %>
    <%- include('../static/partials/messages'); %>

    <div class="container py-5">
      <% if(currentUser && currentUser.role == 'admin') { %>
      <div class="d-flex">
        <a class="btn btn-warning" href="/pbe/<%= pbePost.title %>/edit">Edit</a>
        <form action="/pbe/<%= pbePost.title %>/destroy" method="post">
          <button class="btn btn-danger" type="submit" name="button">Delete</button>
        </form>
      </div>
      <% } %>
      <div id="formContainer">
        <h3 class="text-center">
          <%= pbePost.title %>
        </h3>
        <div>
          <%- pbePost.body %>
        </div>
      </div>
    </div>

    <%- include('../static/partials/baseScripts'); %>
  </body>
</html>
